showObj =
   $case of
    Number num:
        "number ${num}";
    String str:
        "string '${str}'";
    Boolean bool:
        "boolean ${bool}";
    List l:
        "list [${strJoin ", " (map showObj l)}]";
    Struct st:
        field name =
            "${name} = ${showObj (st.value name)}";
        "struct {${strJoin ", " (map field st.fields)}}";
    Variant st:
        "${st.tag} (${st.value})";
    Hash h:
        let item key value =
            "${showObj key}: ${showObj value}";
        "hash [${strJoin ", " (mapHash item h)}]";
    Object o:
        "Object(${o})";
    end;

println (showObj (peekObject {
    foo = 12,
    bar = Some "sheep",
